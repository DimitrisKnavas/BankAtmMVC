@model BankAtmMVC.Models.BankUser

@{
    ViewData["Title"] = "PersonalTransactions";
}

<h1>PersonalTransactions</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    
        @foreach (var item in Model.Transactions)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Amount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Amount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Date)
                </dd>
            </dl>
        }

    
    
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Main Menu</a>
</div>
